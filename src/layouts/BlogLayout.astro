---
import Layout from "./Layout.astro";
import Footer from "../components/Footer.astro";
import CheckerLogo from "../components/CheckerLogo.astro";
---
<Layout>
	<div class="BlogLayoutRoot">
		<CheckerLogo href="/" />
		<a href="/thoughts" class="font-medium text-muted">‚Üê Back</a>
		<div class="BlogLayoutMain">
			<slot />
		</div>
		<Footer />
		<div
		class="pointer-events-none fixed inset-0 z-10 max-w-[40rem] mx-auto
			bg-[var(--page-bg,white)]
			[--edge-fade:linear-gradient(to_bottom,black,transparent_10%,transparent_90%,black)]
			[-webkit-mask-image:var(--edge-fade)]
			[mask-image:var(--edge-fade)]
			[mask-repeat:no-repeat]"
  		></div>
	</div>
</Layout>